<!doctype html>
<html lang="en">
  <head>
    <!-- Required meta tags -->
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <link href="https://fonts.googleapis.com/css?family=Roboto:300,400&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="/add/fonts/icomoon/style.css">

    <link rel="stylesheet" href="/add/css/owl.carousel.min.css">

    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="/add/css/bootstrap.min.css">
    
    <!-- Style -->
    <link rel="stylesheet" href="/add/css/style.css">

    <title>Edit Product</title>
  </head>
  <body>
  

  <div class="d-lg-flex half">
    <div class="bg order-1 order-md-2" style="background-image: url('/add/images/bg_1.jpg');"></div>
    <div class="contents order-2 order-md-1">

      <div class="container">
        <div class="row align-items-center justify-content-center">
          <div class="col-md-7">
            <h3>Edit <strong>Product</strong></h3>
            <p class="mb-4">Lorem ipsum dolor sit amet elit. Sapiente sit aut eos consectetur adipisicing.</p>
            <form action="/admin/edit-products/{{product._id}}" method="post" enctype="multipart/form-data">
              <div class="form-group first">
                <label for="username">Name</label>
                <input type="text" name="Name" class="form-control" value="{{product.Name}}" placeholder="product name" id="username">
              </div>
              <div class="form-group last mb-3">
                <label for="password">Category</label>
                <input type="text" name="Category" class="form-control" value="{{product.Category}}" placeholder="category" id="password">
              </div>
                  <div class="form-group last mb-3">
                <label for="password">Description</label>
                <input type="text" name="Description" class="form-control" value="{{product.Description}}" placeholder="about" id="password">
              </div>
                  <div class="form-group last mb-3">
                <label for="password">Price</label>
                <input type="text" name="Price" class="form-control" value="{{product.Price}}" placeholder="amount" id="password">
              </div>
                  <div class="form-group last mb-3">
                <label for="password">Image</label>
                <img src="/product-images/{{product._id}}.jpg" alt="" style="width:100 ; height:auto" id="imageView" class="pt-3">
                <input type="file" name="Image" class="form-control" onchange="viewImage(event)">
              </div>
              
              <div class="d-flex mb-5 align-items-center">
                <label class="control control--checkbox mb-0"><span class="caption">Ready to upload</span>
                  <input type="checkbox" checked="checked"/>
                  <div class="control__indicator"></div>
                </label>
                {{!-- <span class="ml-auto"><a href="#" class="forgot-pass">Forgot Password</a></span>  --}}
              </div>

                            <button type="submit" class="btn btn-success mt-4">submit </button>

            </form>
          </div>
        </div>
      </div>
    </div>

    
  </div>
  <script>
    function viewImage(event){
      document.getElementById('imageView').src=URL.createObjectURL(event.target.files[0])
    }
  </script>
    
    

    <script src="/add/js/jquery-3.3.1.min.js"></script>
    <script src="/add/js/popper.min.js"></script>
    <script src="/add/js/bootstrap.min.js"></script>
    <script src="/add/js/main.js"></script>
  </body>
</html>